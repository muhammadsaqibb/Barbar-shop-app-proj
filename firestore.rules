
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isUserEnabled(userId) {
      // Allow access if 'enabled' is not explicitly false. Defaults to enabled for legacy users.
      return getUserData(userId).enabled != false;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getSignedInUserRole() {
      return getUserData(request.auth.uid).role;
    }

    function isAdmin() {
      return isSignedIn() && isUserEnabled(request.auth.uid) && getSignedInUserRole() == 'admin';
    }

    function isStaff() {
      return isSignedIn() && isUserEnabled(request.auth.uid) && getSignedInUserRole() == 'staff';
    }

    function isStaffOrAdmin() {
      return isAdmin() || isStaff();
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if (isOwner(userId) && isUserEnabled(userId)) || isAdmin();
      allow list: if isStaffOrAdmin();
      allow create: if isOwner(userId); // A user can only create their own doc upon signup
      allow update: if (isOwner(userId) && isUserEnabled(userId)) || isAdmin(); // Admin can update any user
      allow delete: if (isOwner(userId) && isUserEnabled(userId));
    }

    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /barbers/{barberId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /appointments/{appointmentId} {
        // READ: An admin or staff can read any appointment. A client can only read their own if enabled.
        allow get: if isSignedIn() && (isStaffOrAdmin() || (resource.data.clientId == request.auth.uid && isUserEnabled(request.auth.uid)));
        
        // LIST: Admins and staff can list all appointments. A client can only list their own via a query if enabled.
        allow list: if isSignedIn() && (isStaffOrAdmin() || isUserEnabled(request.auth.uid));
        
        // CREATE: A client can create an appointment for themselves if enabled. Admins/staff can create for anyone.
        allow create: if isSignedIn() && (isStaffOrAdmin() || (request.resource.data.clientId == request.auth.uid && isUserEnabled(request.auth.uid)));
        
        // UPDATE/DELETE: Only admins or staff can modify or cancel any appointment.
        allow update, delete: if isStaffOrAdmin();
    }

    match /expenses/{expenseId} {
      allow read, list, create, update, delete: if isAdmin();
    }
  }
}
