
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isRequestingUserEnabled() {
      // Must be signed-in.
      // Defaults to true for legacy users without the 'enabled' field.
      if (!isSignedIn()) { return false; }
      return getRequestingUserData().enabled != false;
    }
    
    function isTargetUserEnabled(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.enabled != false;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isRequestingUserAdmin() {
      if (!isSignedIn()) { return false; }
      let userData = getRequestingUserData();
      return userData.enabled != false && userData.role == 'admin';
    }

    function isRequestingUserStaff() {
      if (!isSignedIn()) { return false; }
      let userData = getRequestingUserData();
      return userData.enabled != false && userData.role == 'staff';
    }

    function isRequestingUserStaffOrAdmin() {
      if (!isSignedIn()) { return false; }
      let userData = getRequestingUserData();
      return userData.enabled != false && (userData.role == 'admin' || userData.role == 'staff');
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      // READ: An admin can get any user doc. A user can get their own doc.
      // This is the key rule that allows other helper functions to work.
      allow get: if isOwner(userId) || isRequestingUserAdmin();

      // LIST: Only admins and staff can list users (e.g., for the booking form dropdown).
      allow list: if isRequestingUserStaffOrAdmin();
      
      // CREATE: A user can create their own document on signup. The 'enabled' flag is set by client code.
      allow create: if isOwner(userId);
      
      // UPDATE: An admin can update any user. A user can only update their own doc if they are enabled.
      allow update: if isRequestingUserAdmin() || (isOwner(userId) && isTargetUserEnabled(userId));
      
      // DELETE: A user can delete their own account if enabled.
      allow delete: if isOwner(userId) && isTargetUserEnabled(userId);
    }

    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isRequestingUserAdmin();
    }

    match /barbers/{barberId} {
      allow get, list: if true;
      allow create, update, delete: if isRequestingUserAdmin();
    }
    
    match /appointments/{appointmentId} {
        // READ: Staff/Admin can read any appointment. A client can only read their own if their account is enabled.
        allow get: if isSignedIn() && (isRequestingUserStaffOrAdmin() || (resource.data.clientId == request.auth.uid && isRequestingUserEnabled()));
        
        // LIST: Staff/Admin can list all appointments. Any enabled client can also list (needed for booking form availability).
        allow list: if isSignedIn() && (isRequestingUserStaffOrAdmin() || isRequestingUserEnabled());
        
        // CREATE: A client can create an appointment for themselves if enabled. Admins/staff can create for anyone.
        allow create: if isSignedIn() && (isRequestingUserStaffOrAdmin() || (request.resource.data.clientId == request.auth.uid && isRequestingUserEnabled()));
        
        // UPDATE/DELETE: Only admins or staff can modify or cancel any appointment.
        allow update, delete: if isRequestingUserStaffOrAdmin();
    }

    match /expenses/{expenseId} {
      allow read, list, create, update, delete: if isRequestingUserAdmin();
    }
  }
}
