
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // More efficient helper that reads the requesting user's data once.
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function isRequestingUserEnabled() {
      let userDoc = getRequestingUserData();
      return userDoc.exists && userDoc.data.enabled != false;
    }

    function isRequestingUserAdmin() {
      let userDoc = getRequestingUserData();
      return isSignedIn() && userDoc.exists && userDoc.data.enabled != false && userDoc.data.role == 'admin';
    }
    
    function isRequestingUserStaff() {
      let userDoc = getRequestingUserData();
      return isSignedIn() && userDoc.exists && userDoc.data.enabled != false && userDoc.data.role == 'staff';
    }

    function isRequestingUserStaffOrAdmin() {
      let userDoc = getRequestingUserData();
      return isSignedIn() && userDoc.exists && userDoc.data.enabled != false && (userDoc.data.role == 'admin' || userDoc.data.role == 'staff');
    }

    function isRequestingUserClient() {
      let userDoc = getRequestingUserData();
      return isSignedIn() && userDoc.exists && userDoc.data.enabled != false && userDoc.data.role == 'client';
    }

    // This helper is for checking other users, not the requesting user.
    function isEnabled(userId) {
        return exists(/databases/$(database)/documents/users/$(userId)) &&
               get(/databases/$(database)/documents/users/$(userId)).data.enabled != false;
    }


    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isRequestingUserAdmin();
      allow list: if isRequestingUserStaffOrAdmin();
      allow create: if isOwner(userId);
      allow update: if isRequestingUserAdmin() || (isOwner(userId) && isRequestingUserEnabled());
      allow delete: if isOwner(userId) && isRequestingUserEnabled();
    }

    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isRequestingUserAdmin();
    }

    match /barbers/{barberId} {
      allow get, list: if true;
      allow create, update, delete: if isRequestingUserAdmin();
    }
    
    match /appointments/{appointmentId} {
        allow get: if isSignedIn() && (isRequestingUserStaffOrAdmin() || (resource.data.clientId == request.auth.uid && isRequestingUserEnabled()));
        allow list: if isSignedIn() && (isRequestingUserStaffOrAdmin() || isRequestingUserEnabled());
        allow create: if isSignedIn() && (isRequestingUserStaffOrAdmin() || (request.resource.data.clientId == request.auth.uid && isRequestingUserEnabled()));
        allow update, delete: if isRequestingUserStaffOrAdmin();
    }

    match /expenses/{expenseId} {
      allow read, list, create, update, delete: if isRequestingUserAdmin();
    }

    match /reviews/{reviewId} {
      allow get, list: if isSignedIn();
      allow create: if isRequestingUserClient() && request.resource.data.clientId == request.auth.uid;
      allow update: if isRequestingUserAdmin() || (isRequestingUserClient() && resource.data.clientId == request.auth.uid);
      allow delete: if isRequestingUserAdmin() || (isRequestingUserClient() && resource.data.clientId == request.auth.uid);
    }
  }
}
