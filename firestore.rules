
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }

    function isStaff() {
      return isSignedIn() && getUserRole() == 'staff';
    }

    function isStaffOrAdmin() {
      return isAdmin() || isStaff();
    }

    // ------------------------------------------------------------------------
    // Collection Rules
    // ------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isStaffOrAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId);
    }

    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /barbers/{barberId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /appointments/{appointmentId} {
        // READ: An admin or staff can read any appointment. A client can only read their own.
        allow get: if isSignedIn() && (isStaffOrAdmin() || resource.data.clientId == request.auth.uid);
        
        // LIST: Admins and staff can list all appointments. A client can only list their own via a query.
        // The client-side query must enforce filtering by clientId.
        allow list: if isSignedIn();
        
        // CREATE: A client can create an appointment for themselves. Admins/staff can create for anyone.
        allow create: if isSignedIn() && (isStaffOrAdmin() || request.resource.data.clientId == request.auth.uid);
        
        // UPDATE/DELETE: Only admins or staff can modify or cancel any appointment.
        allow update, delete: if isStaffOrAdmin();
    }

    match /expenses/{expenseId} {
      allow read, list, create, update, delete: if isAdmin();
    }
  }
}
